
<div class="home-banner2">
  <div class="p-3 mb-3 d-flex justify-content-between align-items-center">
    <%= image_tag("SALT-logo.svg", class: "icon") %>
    <% if user_signed_in? %>
      <%= link_to "My profile", profile_path , class:"text-white custom-my-profile" %>
    <% else %>
      <%=  link_to "Login", new_user_session_path, class: "login-link link" %>
    <% end %>
  </div>
  <div class="vertical-align d-flex flex-column justify-content-center">
    <h1 class="text-center">FIND PUMPING SURF NEAR YOU</h1>

    <!-- <h4 class="text-center"> Choose your location and range</h4> -->
      <div class="container">
        <%= form_tag spots_path, method: :get, class: "my-4 d-flex align-items-center justify-content-center" do %>
          <div id="search-home" class="container d-flex justify-content-center align-items-center">
            <div class="search-width grey-background orange-box-shadow d-flex justify-content-center align-items-center">
              <div class="custom-width">
                <%= text_field_tag :query, params[:query],
                  placeholder: "Search around...",
                  class: "address-input custom-form px-4 mw-50", id: "address-input"
                %>
              </div>
              <div class="range-slider-home custom-form-slider">
                <p class="my-0 mx-2"></p>
                <input class="range-slider__range" name="distance" type="range" value="100" min="0" max="100">
                <span class="range-slider__value ml-2 light-blue">100</span>
                <p class="my-0 mx-1 light-blue">km</p>
              </div>
                <div id="search">
                  <%= submit_tag "Go", class: "btn-go-homepage"%>
                </div>
            </div>
          </div>
        <% end %>
      </div>
  </div>
  <div class="mt-4 mb-4 container text-center" style="opacity: 0.7;">
    <% if current_user %>
      <% if current_user.favorites %>
        <h3 class="text-white"> Conditions at your Favorite Spots <strong>right now</strong></h3>
      <% else %>
        <h3 class="text-white"> The best spots right now </h3>
      <% end %>
    <% else %>
      <h3 class="text-white"> The best spots right now </h3>
    <% end %>

  </div>
  <div class="spacer"></div>
</div>
